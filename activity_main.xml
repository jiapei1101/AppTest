<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:text="收入月趨勢圖"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="359dp"
        android:layout_height="276dp"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="25dp"
        android:background="#DCC7C7"
        android:shape="rectangle"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="12dp"
        android:text="支出月趨勢圖"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/viewPager2"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager2"
        android:layout_width="359dp"
        android:layout_height="276dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="104dp"
        android:background="#DCC7C7"
        android:shape="rectangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/wmy_btn"
        android:layout_width="267dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="11dp"
        android:text="_"
        android:textColor="#FF6750A4"
        app:layout_constraintBottom_toTopOf="@+id/choose_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weal_btn"
        android:layout_width="92dp"
        android:layout_height="48dp"
        android:layout_marginStart="68dp"
        android:layout_marginBottom="132dp"
        android:text="週帳單"
        app:layout_constraintBottom_toTopOf="@+id/viewPager"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/month_btn"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#CBBBE9"
        android:text="月帳單"
        app:layout_constraintStart_toEndOf="@+id/weal_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/year_btn"
        android:layout_width="88dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="75dp"
        android:text="年帳單"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/choose_btn"
        android:layout_width="158dp"
        android:layout_height="53dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="204dp"
        android:background="#00000000"
        android:text="2024年11月"
        android:textColor="#2B2D30"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
